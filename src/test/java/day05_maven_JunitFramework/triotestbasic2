package day05_maven_JunitFramework;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.Assert;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

public class triobasictest2 {

    @DataProvider(name = "browsers", parallel = true)
    public Object[][] browsers() {
        return new Object[][]{
                {"chrome"},
                {"firefox"},
                {"edge"}
        };
    }

    @Test(dataProvider = "browsers")
    public void googleTitleTest(@org.jetbrains.annotations.NotNull String browser) {
        WebDriver driver = null;
        try {
            switch (browser) {
                case "chrome":
                    driver = new ChromeDriver();
                    break;
                case "firefox":
                    driver = new FirefoxDriver();
                    break;
                case "edge":
                    driver = new EdgeDriver();
                    break;
                default:
                    throw new IllegalArgumentException("Unknown browser: " + browser);
            }
            driver.get("https://www.google.com");
            String title = driver.getTitle();
            System.out.println(browser + " title: " + title);
            Assert.assertTrue(title.contains("Google"), browser + " title is: " + title);
        } finally {
            if (driver != null) {
                driver.quit();
            }
        }
    }
}